{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": "schematics-common",
    "outDir": "../../dist/libs/template",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node"],
    "paths": {}
  },
  "include": ["schematics-common/**/*"],
  "exclude": [
    "schematics-common/**/*.spec.ts",
    "schematics-common/**/*.spec.ts"
  ]
}
