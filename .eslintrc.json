{
  "root": true,
  "ignorePatterns": [
    "**/*",
    "/libs/cdk/render-strategies/src/scheduler/**/*",
    "/libs/cdk/zone-less/src/rxjs/**/*"
  ],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": false,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:lib"]
              },
              {
                "sourceTag": "type:lib",
                "onlyDependOnLibsWithTags": ["type:lib"]
              },
              {
                "sourceTag": "scope:template",
                "onlyDependOnLibsWithTags": ["scope:shared","scope:template"]
              },
              {
                "sourceTag": "scope:state",
                "onlyDependOnLibsWithTags": ["scope:shared","scope:state"]
              },
              {
                "sourceTag": "scope:let",
                "onlyDependOnLibsWithTags": ["scope:shared","scope:let"]
              },
              {
                "sourceTag": "scope:push",
                "onlyDependOnLibsWithTags": ["scope:shared","scope:push"]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "parserOptions": { "project": "./tsconfig.*?.json" },
      "rules": {
        "no-prototype-builtins": "off",
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/ban-types": "warn",
        "@typescript-eslint/no-empty-function": "warn",
        "no-extra-boolean-cast": "warn",
        "prefer-rest-params": "warn",
        "@typescript-eslint/no-inferrable-types": "warn"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
